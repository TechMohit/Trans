<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Ll_both_match_heading"
    android:background="@color/backgroundColor">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="@dimen/dp10"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp5"
        style="@style/cardViewStyle">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/Ll_normal_htl">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/dp5"
                    app:cardElevation="@dimen/dp5">

                    <LinearLayout
                       style="@style/Ll_normal_vtl">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp100"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@drawable/shape4"
                        android:layout_marginLeft="@dimen/dp5" />

                    <LinearLayout
                        style="@style/Ll_normal_htl"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <TextView
                            style="@style/tv_weight_normal"
                            android:text="Stop Number"
                            android:layout_weight="5"
                            android:layout_marginLeft="@dimen/dp5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp12"
                            />

                        <TextView
                            style="@style/tv_weight_normal"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp13"
                            android:layout_marginRight="@dimen/dp5"
                            android:layout_gravity="center"
                            android:gravity="center" />



                    </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/stopname"
                  style="@style/tv_normal"
                    android:textSize="@dimen/sp20"
                    android:layout_marginTop="@dimen/dp5"
                    android:text="Stop Name :" />



                <TextView
                    android:id="@+id/distance"
                    style="@style/tv_normal"
                    android:textSize="@dimen/sp20"
                    android:layout_below="@id/stopname"
                    android:layout_marginTop="@dimen/dp70"
                    android:text="Distance :" />

                <TextView
                    android:id="@+id/arrival"
                    style="@style/tv_normal"
                    android:layout_below="@id/stopname"
                    android:layout_toRightOf="@id/stopname"
                    android:layout_marginTop="@dimen/dp70"
                    android:textSize="@dimen/sp20"
                    android:layout_marginLeft="@dimen/dp30"
                    android:text="Distance :" />




            </RelativeLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>